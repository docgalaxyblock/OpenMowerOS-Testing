export BASE_USER_PASSWORD="openmower"
export BASE_OVERRIDE_HOSTNAME="OpenMower"

export MODULES="base,pkgupgrade,piconfig,podman,comitup,openocd,openmower"

#export PKGUPGRADE_USE_PREINSTALLER=y
